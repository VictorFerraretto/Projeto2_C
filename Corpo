//TESTAR DEPOIS
// DEPOSITAR 
void depositar(float *carteira) {
    float valor;
    printf("Quanto deseja depositar (ou 0 para não depositar), MAX(R$50.00):\n");
    scanf("%f", &valor);

    if (valor < 0) {
        printf("Valor inválido. O depósito deve ser positivo.\n");
    } else if (valor > 50) {
        printf("O valor máximo para depósito é R$50.00.\n");
    } else {
        carteira[indice] += valor;  // Lembre-se de definir o 'indice' corretamente
        printf("Depósito de R$%.2f realizado com sucesso!\n", valor);
    }
};

// MOSTRAR O MENU PRINCIPAL
void menu(){

  int cont;

  while(1){
    printf("\n");
    printf("=============MENU==========\n");
    printf("O que você deseja acessar?\n");
    printf("--------------------------\n");
    printf("-> 1-Jogar\n");
    printf("-> 2-Sua carteira\n");
    printf("-> 3-Depositar\n");
    printf("-> 4-Sacar\n");
    printf("-> 5-Loja\n");
    printf("-> 6-Inventário\n");
    printf("-> 7-Histórico\n");
    printf("-> 8-Sair\n");
    printf("===========================\n");
    scanf("%d", &cont);
    printf("\n");


      switch (cont){
      case 1:
        menu_jogos();
        getchar();
        break;
      case 2:
        break;
      case 3:
        break;
      case 4:
        break;
      case 5:
        break;
      case 6:
        break;
      case 7:
        break;
      case 8:
        printf("DESCONECTANDO...\n");
        return;
    }
  }
}


int main(){
  setlocale(LC_ALL, "portuguese");
  menu();

  system("pause");
  return 0;
}
